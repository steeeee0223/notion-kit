{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "extends": "none",
  "name": "notion-theme",
  "title": "Notion Theme",
  "dependencies": ["tailwind-merge", "clsx"],
  "registryDependencies": ["utils"],
  "files": [],
