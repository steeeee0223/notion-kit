{
  "extends": "@notion-kit/tsconfig/base.json",
  "compilerOptions": {
    "module": "esnext",
    "lib": ["ES2022", "dom", "dom.iterable"],
    "types": ["vite/client"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },
    "plugins": [{ "name": "next" }]
  },
  "include": ["src", ".storybook/**/*.ts", ".storybook/**/*.tsx"],
  "exclude": ["node_modules"]
}
