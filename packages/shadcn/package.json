{
  "name": "@notion-kit/shadcn",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "ui-add": "pnpm dlx shadcn@latest add && prettier src --write --list-different"
  },
  "dependencies": {
    "@hookform/resolvers": "catalog:ui",
    "@notion-kit/cn": "workspace:*",
    "@radix-ui/react-icons": "^1.3.2",
    "class-variance-authority": "^0.7.1",
    "cmdk": "^1.0.4",
    "next-themes": "catalog:ui",
    "radix-ui": "^1.1.2",
    "react-hook-form": "catalog:ui",
    "react-resizable-panels": "^2.1.7",
    "sonner": "catalog:ui",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@notion-kit/eslint-config": "workspace:*",
    "@notion-kit/prettier-config": "workspace:*",
    "@notion-kit/tailwind-config": "workspace:*",
    "@notion-kit/tsconfig": "workspace:*",
    "@types/react": "catalog:react19",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "react": "catalog:react19",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "zod": "catalog:"
  },
  "peerDependencies": {
    "react": "catalog:react19",
    "zod": "catalog:"
  },
  "prettier": "@notion-kit/prettier-config"
}
