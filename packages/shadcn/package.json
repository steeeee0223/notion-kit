{
  "name": "@notion-kit/shadcn",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/src/*.d.ts",
      "default": [
        "./src/*.ts",
        "./src/*.tsx"
      ]
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "ui-add": "pnpm dlx shadcn@latest add && prettier src --write --list-different"
  },
  "dependencies": {
    "@hookform/resolvers": "catalog:ui",
    "@notion-kit/cn": "workspace:*",
    "@radix-ui/react-icons": "^1.3.2",
    "class-variance-authority": "^0.7.1",
    "cmdk": "^1.0.4",
    "next-themes": "catalog:ui",
    "radix-ui": "^1.1.2",
    "react-hook-form": "catalog:ui",
    "react-resizable-panels": "^2.1.7",
    "sonner": "catalog:ui",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@notion-kit/eslint-config": "workspace:*",
    "@notion-kit/prettier-config": "workspace:*",
    "@notion-kit/tailwind-config": "workspace:*",
    "@notion-kit/tsconfig": "workspace:*",
    "@types/react": "catalog:react18",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "react": "catalog:react18",
    "typescript": "catalog:",
    "zod": "catalog:"
  },
  "peerDependencies": {
    "react": "catalog:react18",
    "zod": "catalog:"
  },
  "prettier": "@notion-kit/prettier-config"
}
