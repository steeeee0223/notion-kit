{
  "name": "@notion-kit/common",
  "version": "0.14.0",
  "type": "module",
  "bugs": {
    "url": "https://github.com/steeeee0223/notion-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/steeeee0223/notion-kit.git",
    "directory": "packages/common"
  },
  "exports": {
    "./*": {
      "types": "./dist/*.d.mts",
      "default": "./dist/*.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsdown",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsdown --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@hookform/resolvers": "catalog:ui",
    "@notion-kit/cn": "workspace:*",
    "@notion-kit/hooks": "workspace:*",
    "@notion-kit/shadcn": "workspace:*",
    "@notion-kit/spinner": "workspace:*",
    "react-hook-form": "catalog:ui"
  },
  "devDependencies": {
    "@notion-kit/eslint-config": "workspace:*",
    "@notion-kit/prettier-config": "workspace:*",
    "@notion-kit/tsconfig": "workspace:*",
    "@rollup/plugin-babel": "catalog:build",
    "babel-plugin-react-compiler": "catalog:react-compiler",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "react-compiler-runtime": "catalog:react-compiler",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "react": "catalog:react19",
    "zod": "catalog:"
  },
  "prettier": "@notion-kit/prettier-config",
  "babel": {
    "plugins": [
      "babel-plugin-react-compiler"
    ]
  }
}
