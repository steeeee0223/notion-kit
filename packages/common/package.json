{
  "name": "@notion-kit/common",
  "version": "0.11.1-canary.28",
  "bugs": {
    "url": "https://github.com/steeeee0223/notion-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/steeeee0223/notion-kit.git",
    "directory": "packages/common"
  },
  "publishConfig": {
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.d.mts",
          "default": "./dist/index.mjs"
        },
        "require": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.js"
        }
      }
    }
  },
  "files": [
    "dist"
  ],
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "source": "./src/index.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsup --config=../../tooling/config/tsup.config.ts",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsup --config=../../tooling/config/tsup.config.ts --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@hookform/resolvers": "catalog:ui",
    "@notion-kit/cn": "workspace:*",
    "@notion-kit/hooks": "workspace:*",
    "@notion-kit/modal": "workspace:*",
    "@notion-kit/shadcn": "workspace:*",
    "@notion-kit/spinner": "workspace:*",
    "react-hook-form": "catalog:ui"
  },
  "devDependencies": {
    "@notion-kit/eslint-config": "workspace:*",
    "@notion-kit/prettier-config": "workspace:*",
    "@notion-kit/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "react": "catalog:react19",
    "zod": "catalog:"
  },
  "prettier": "@notion-kit/prettier-config"
}
