{
  "name": "@notion-kit/{{ name }}",
  "private": true,
  "version": "0.1.0",

  "bugs": {
    "url": "https://github.com/steeeee0223/notion-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/steeeee0223/notion-kit.git",
    "directory": "packages/{{ name }}"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",

      "default": "./src/index.ts"
    }
  },
  "files": ["dist"],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsup --config=../../tooling/config/tsup.config.ts",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsup --config=../../tooling/config/tsup.config.ts --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "devDependencies": {
    "@notion-kit/eslint-config": "workspace:*",
    "@notion-kit/prettier-config": "workspace:*",
    "@notion-kit/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@notion-kit/prettier-config"
}
